<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.4/jquery.min.js"></script>
<div class="table-responsive">
    <table class="table table-striped table-sm" id="sampleTable" style="width:100% !important;">
        <thead>
            <tr style="text-align:center;">
                <td>Group Name</td>
                <td>No. of Member</td>
                <td>Amount</td>

            </tr>
        </thead>
        <tbody style="text-align:center;">
            {{#each data}}
            <tr>
                <td>{{groupname}}</td>
                <td>{{total}}</td>
                <td>{{amount}}</td>

                {{/each}}
        </tbody>
    </table>

    <table style="margin-left:51%;margin-top: 12%;">
        {{#each data}}
        <tr>
            <td style="color:red;font-size: 15px;">{{bidamount}}</td>
        </tr>
        {{/each}}
    </table>
</div>

<style>
    table tr td:last {


        font-weight: bold;

    }
</style>
<script>
    $("table tr td:last").before("<span> Collected Amount- </span>");
</script>