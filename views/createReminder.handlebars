   <div class="paddingTL">
        <div class="col-md-6">
          <div class="tile">
            <div>
              <h3 class="tile-title">Add New Reminder</h3>
              {{#if error_msg}}
                <div class="alert alert-danger">{{error_msg}}</div>
              {{/if}}
                 <p id="msgerror" style="color:red"></p>
            </div>
            
            <div class="tile-body">
              <form class="form-horizontal" method="POST" action="/createReminder">
               
                <div class="form-group row">
                  <label class="control-label col-md-3">Date</label>
                  <div class="col-md-7">
                    <input class="form-control col-md-8" type="date"  placeholder="Select Date" value="" name="date" id="date" autocomplete="off" required>
                  </div>
                </div>
                <div class="form-group row">
                  <label class="control-label col-md-3">Comments</label>
                  <div class="col-md-7">
                    <textarea type="text" class="form-control col-md-8" rows="4"   value="" placeholder="Enter your comments" id="comment" autocomplete="off" name="comment" required></textarea>
                  </div>
                </div>
               
                <div class="tile-footer">
                  <div class="row">
                    <div class="col-md-8 col-md-offset-3 col-xs-12">
                      <button class="btn btn-primary" type="submit" onclick="return isMax();"><i class="fa fa-fw fa-lg fa-check-circle"></i>Add</button>&nbsp;&nbsp;&nbsp;<a class="btn btn-secondary" href="/"><i class="fa fa-fw fa-lg fa-check-circle"></i>Cancel</a>
                    </div>
                  </div>
                </div>
                <div class="tile-footer">
                  <div class="row">
                    <div class="col-md-8 col-md-offset-3">
                        {{#each message}}
                    {{message}}
                    {{/each}}
                    </div>
                  </div>
                </div>
              </form>
            </div>

          </div>
        </div>
        <div class="col-md-6">
          {{#if errors}}
              {{#each errors}}
                  <div class="alert alert-danger">{{msg}}</div>
              {{/each}}
          {{/if}}

        </div>
        {{!-- *****Javascript number validation******* --}}
       <script type="text/javascript">
       function isNumberKey(evt)
       {
          var charCode = (evt.which) ? evt.which : evt.keyCode;
          if (charCode != 46 && charCode > 31 
            && (charCode < 48 || charCode > 57))
             return false;
          return true;
       }
        function isMax()
       {
          debugger;
          let min =  document.getElementById("min").value;
          let max =  document.getElementById("max").value;
          if(parseInt(max) < parseInt(min))
          {
            document.getElementById("msgerror").innerHTML= "min price shuld be less than max price";
            return false;
          }
          else
          {
            document.getElementById("msgerror").innerHTML= "";
            return true;
          }

          
       }
        
       </script>

