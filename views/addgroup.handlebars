<div class="paddingTL">
  <div class="col-md-6">
    <div class="tile">
      <div>
        <h3 class="tile-title">Add New Group</h3>
        {{#if error_msg}}
        <div class="alert alert-danger">{{error_msg}}</div>
        {{/if}}
        <p id="msgerror" style="color:red"></p>
      </div>

      <div class="tile-body">
        <form class="form-horizontal" method="POST" action="/addgroup">

          <div class="form-group row">
            <label class="control-label col-md-3">Group Name</label>
            <div class="col-md-7">
              <input class="form-control col-md-8" type="text" placeholder="Enter Group Name" value="" name="groupname"
                id="groupname" autocomplete="off" required>
            </div>
          </div>
          <div class="form-group row">
            <label class="control-label col-md-3">Limit-Member</label>
            <div class="col-md-7">
              <input class="form-control col-md-8" type="text" placeholder="Enter member limit 1,2,3,4,5.." value=""
                name="limit" id="limit" autocomplete="off" required>
            </div>
          </div>
          <div class="form-group row">
            <label class="control-label col-md-3">Start-Date</label>
            <div class="col-md-7">
              <input class="form-control col-md-8" type="date" value="" name="startdate" id="startdate" autocomplete="off"
                required>
            </div>
          </div>
          <div class="form-group row">
            <label class="control-label col-md-3">Bid Date of Month</label>
            <div class="col-md-7">
              <select name="biddate" class="form-control col-md-8">
                <option value="">--Select--</option>
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
                <option value="6">6</option>
                <option value="7">7</option>
                <option value="8">8</option>
                <option value="9">9</option>
                <option value="10">10</option>
                <option value="11">11</option>
                <option value="12">12</option>
                <option value="13">13</option>
                <option value="14">14</option>
                <option value="15">15</option>
                <option value="16">16</option>
                <option value="17">17</option>
                <option value="18">18</option>
                <option value="19">19</option>
                <option value="20">20</option>
                <option value="21">21</option>
                <option value="22">22</option>
                <option value="23">23</option>
                <option value="24">24</option>
                <option value="25">25</option>
                <option value="26">26</option>
                <option value="27">27</option>
                <option value="28">28</option>
                <option value="29">29</option>
                <option value="30">30</option>

              </select>
            </div>
          </div>
          <div class="form-group row">
            <label class="control-label col-md-3">Amount</label>
            <div class="col-md-7">
              <input class="form-control col-md-8" type="text" placeholder="Enter amount" value="" name="amount" id="amount"
                autocomplete="off" required>
            </div>
          </div>
          <div class="tile-footer">
            <div class="row">
              <div class="col-md-8 col-md-offset-3 col-xs-12">
                <button class="btn btn-primary" type="submit"><i class="fa fa-fw fa-lg fa-check-circle"></i>Add</button>&nbsp;&nbsp;&nbsp;<a
                  class="btn btn-secondary" href="/Viewgroup"><i class="fa fa-fw fa-lg fa-check-circle"></i>Cancel</a>
              </div>
            </div>
          </div>
          <div class="tile-footer">
            <div class="row">
              <div class="col-md-8 col-md-offset-3">
                {{#each message}}
                {{message}}
                {{/each}}
              </div>
            </div>
          </div>
        </form>
      </div>

    </div>
  </div>
  <div class="col-md-6">
    {{#if errors}}
    {{#each errors}}
    <div class="alert alert-danger">{{msg}}</div>
    {{/each}}
    {{/if}}

  </div>
