   <div class="row paddingTL">
        <div class="col-md-6">
          <div class="tile">
            <h3 class="tile-title">Edit Reminder</h3>
            <div class="tile-body">
              <form class="form-horizontal" method="POST" action="/edit">                      

                <div class="form-group row">
                  <label class="control-label col-md-3">Date</label>
                  <div class="col-md-7">
                    <input class="form-control col-md-8" type="text"   value="{{data.date}}" name="date" required>
                  </div>
                </div>
                <div class="form-group row">
                  <label class="control-label col-md-3">Comment</label>
                  <div class="col-md-7">
                    <textarea type="text" class="form-control col-md-8" rows="4"   value="" name="comment" required>{{data.comment}}</textarea>
                  </div>
                </div>
                <div class="tile-footer">
                  <div class="row">
                    <div class="col-md-8 col-md-offset-3">
                      <button class="btn btn-primary" type="submit"><i class="fa fa-fw fa-lg fa-check-circle"></i>Update</button>
                      <a class="btn btn-secondary" href="/"><i class="fa fa-fw fa-lg fa-check-circle"></i>Cancel</a>
                    </div>
                  </div>
                </div>
                <div>
                    <input type="hidden" name="id" value="{{data._id}}">
                  
                </div>
                <div class="tile-footer">
                  <div class="row">
                    <div class="col-md-8 col-md-offset-3">
                        {{#each message}}
                    {{message}}
                    {{/each}}
                    </div>
                  </div>
                </div>
              </form>
            </div>

          </div>
        </div>
        <div class="col-md-6">
          {{#if errors}}
              {{#each errors}}
                  <div class="alert alert-danger">{{msg}}</div>
              {{/each}}
          {{/if}}
           
        </div>
        {{!-- *****Javascript number validation******* --}}
       <script type="text/javascript">
       function isNumberKey(evt)
       {
          var charCode = (evt.which) ? evt.which : evt.keyCode;
          if (charCode != 46 && charCode > 31 
            && (charCode < 48 || charCode > 57))
             return false;

          return true;
       }
       </script>
