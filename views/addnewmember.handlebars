<div class="paddingTL">
  <div class="col-md-6">
    <div class="tile">
      <div>
        <h3 class="tile-title">Add New Member</h3>
        {{#if error_msg}}
        <div class="alert alert-danger">{{error_msg}}</div>
        {{/if}}
        <p id="msgerror" style="color:red"></p>
      </div>
      <div class="tile-body">
        <form class="form-horizontal" method="POST" action="/newMember">
          <div><input type="hidden" name="groupid" value="{{data._id}}"></div>
          <div><input type="hidden" name="limit" value="{{data.limit}}"></div>
          <div><input type="hidden" name="total" value="{{data.total}}"></div>
          <div class="form-group row">
            <label class="control-label col-md-3">Group Name</label>
            <div class="col-md-3">
              <input type="text" name="groupname" title="Group Name" value="{{data.groupname}}" class="form-control col-md-12"
                readonly>

            </div>
            <div class="col-md-3"> <input type="text" name="biddate" title="Bid of Month" value="Bid-{{data.biddate}}"
                class="form-control col-md-10" readonly></div>
            <div class="col-md-3"> <input type="text" title="No. of Member in a Group" name="limit" value="Limit-{{data.limit}}"
                class="form-control col-md-12" readonly></div>

          </div>
          <div class="form-group row">
            <label class="control-label col-md-3">Full Name</label>
            <div class="col-md-7">
              <input class="form-control col-md-12" type="text" placeholder="Enter full name" value="" name="fullname"
                id="fullname" autocomplete="off" required>
            </div>
          </div>
          <div class="form-group row">
            <label class="control-label col-md-3">Email</label>
            <div class="col-md-7">
              <input type="text" class="form-control col-md-12" rows="4" value="" placeholder="Enter your email" id="email"
                autocomplete="off" pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{1,3}$" name="email" required data-msg="Please enter a valid email address"
                required>
            </div>
          </div>
          <div class="form-group row">
            <label class="control-label col-md-3">Mobile</label>
            <div class="col-md-7">
              <input type="text" class="form-control col-md-12" rows="4" onkeypress="return isNumberKey(event)" value=""
                placeholder="Enter your mobile" id="mobile" autocomplete="off" name="mobile" pattern="[2-9]{1}[0-9]{9}"
                title="Phone number with 7-9 and remaing 9 digit with 0-9" required>
            </div>
          </div>
          <div class="form-group row">
            <label class="control-label col-md-3">Pay Amount</label>
            <div class="col-md-7">
              <input type="number" class="form-control col-md-12" rows="4" onkeypress="return isNumberKey(event)" value="{{data.amount}}"
                placeholder="Enter your bid amount" id="amount" autocomplete="off" name="amount" pattern="[2-9]{1}[0-9]{9}"
                required readonly>
            </div>
          </div>
          <div class="form-group row">
            <label class="control-label col-md-3">Password</label>
            <div class="col-md-7">
              <input type="password" class="form-control col-md-12" rows="4" value="" placeholder="Enter your password"
                id="password" autocomplete="off" name="password" required>
            </div>
          </div>
          <div class="tile-footer">
            <div class="row">
              <div class="col-md-8 col-md-offset-3 col-xs-12">
                <button class="btn btn-primary" type="submit" onclick="return isMax();"><i class="fa fa-fw fa-lg fa-check-circle"></i>Add</button>&nbsp;&nbsp;&nbsp;<a
                  class="btn btn-secondary" href="/Viewgroup"><i class="fa fa-fw fa-lg fa-check-circle"></i>Cancel</a>
              </div>
            </div>
          </div>
          <div class="tile-footer">
            <div class="row">
              <div class="col-md-8 col-md-offset-3">
                {{#each message}}
                {{message}}
                {{/each}}
              </div>
            </div>
          </div>
        </form>
      </div>

    </div>
  </div>
  <div class="col-md-6">
    {{#if errors}}
    {{#each errors}}
    <div class="alert alert-danger">{{msg}}</div>
    {{/each}}
    {{/if}}

  </div>
  {{!-- *****Javascript number validation******* --}}
  <script type="text/javascript">
    function isNumberKey(evt) {
      var charCode = (evt.which) ? evt.which : evt.keyCode;
      if (charCode != 46 && charCode > 31
        && (charCode < 48 || charCode > 57))
        return false;
      return true;
    }


  </script>

  {{!-- javascript code for show tokenlist name with dropdown selection --}}

</div>
<script src="https://npmcdn.com/js-alert/dist/jsalert.min.js"></script>