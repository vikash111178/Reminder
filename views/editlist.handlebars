   <div class="row paddingTL">
        <div class="col-md-6">
          <div class="tile">
            <h3 class="tile-title">Edit List Item</h3>
            <div class="tile-body">
              <form class="form-horizontal" method="POST" action="/editlist">                      

               <div class="form-group row">
                  <label class="control-label col-md-3">List Name</label>
                  <div class="col-md-7">
                    <input class="form-control col-md-8" type="text" value="{{data.productname}}"  placeholder="Enter Name Of List" value="" name="listname" id="listname" autocomplete="off" required>
                  </div>
                </div>
                <div class="form-group row">
                  <label class="control-label col-md-3">List Price</label>
                  <div class="col-md-7">
                      <input class="form-control col-md-8" type="text" value="{{data.productprice}}"  placeholder="Enter Price" value="" name="listprice" id="listprice" autocomplete="off" required>
                    
                  </div>
                </div>
                <div class="tile-footer">
                  <div class="row">
                    <div class="col-md-8 col-md-offset-3">
                      <button class="btn btn-primary" type="submit"><i class="fa fa-fw fa-lg fa-check-circle"></i>Update</button>
                      <a class="btn btn-secondary" href="/listitem"><i class="fa fa-fw fa-lg fa-check-circle"></i>Cancel</a>
                    </div>
                  </div>
                </div>
                <div>
                    <input type="hidden" name="id" value="{{data._id}}">
                  
                </div>
                <div class="tile-footer">
                  <div class="row">
                    <div class="col-md-8 col-md-offset-3">
                        {{#each message}}
                    {{message}}
                    {{/each}}
                    </div>
                  </div>
                </div>
              </form>
            </div>

          </div>
        </div>
        <div class="col-md-6">
          {{#if errors}}
              {{#each errors}}
                  <div class="alert alert-danger">{{msg}}</div>
              {{/each}}
          {{/if}}
           
        </div>
